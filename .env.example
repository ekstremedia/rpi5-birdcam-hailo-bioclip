# Bird Monitor Configuration
# Copy to .env and adjust for your setup

# Web dashboard port
PORT=8888

# Camera: "elgato" or "picamera2"
CAMERA_SOURCE=elgato
ELGATO_DEVICE=/dev/v4l/by-id/usb-Elgato_Cam_Link_4K_0005723438000-video-index0
ELGATO_WIDTH=1920
ELGATO_HEIGHT=1080
PICAMERA2_WIDTH=1280
PICAMERA2_HEIGHT=960

# Detection
MODEL_PATH=/usr/share/hailo-models/yolov8s_h8.hef
CONFIDENCE_THRESHOLD=0.4
CROP_DIR=/home/pi/ai/bird_crops
DB_PATH=/home/pi/ai/birds.db

# Tracker
MAX_DISAPPEARED=15
MAX_DISTANCE=150
CROP_SAVE_INTERVAL=3.0

# Species classification API (BioCLIP on NUC via Docker)
SPECIES_API_URL=http://192.168.1.64:5555
SPECIES_API_TIMEOUT=5
SPECIES_HEALTH_INTERVAL=15
SPECIES_RECLASSIFY_THRESHOLD=0.70
SPECIES_RECLASSIFY_INTERVAL=1.5
SPECIES_RECLASSIFY_MAX=3
SPECIES_LIST_PATH=/home/pi/ai/models/norwegian_species.txt
